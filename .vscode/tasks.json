{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "g++",
			"args": [
				"-g",
				"-std=c++11",
				// "${file}",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}.out",
				"${workspaceFolder}/src/lexer.cpp",
				"${workspaceFolder}/src/lexer_test.cpp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		}
	]
}